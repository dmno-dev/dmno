{
  "extends": "dmno/tsconfigs/dmno-folder",
  "include": [
    "src/**/*.ts",
    "functions-src/**/*.ts"
  ],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "lib": [ "esnext" ],
    "baseUrl": ".",
    "paths": {
      "@/components/*": [
        "src/components/*"
      ],
      "@/utils/*": [
        "src/utils/*"
      ],
      "@/types/*": [
        "src/types/*",
        "@cloudflare/workers-types"
      ]
    }
  }
}
