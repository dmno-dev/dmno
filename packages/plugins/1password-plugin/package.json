{
  "name": "@dmno/1password-plugin",
  "version": "1.0.0",
  "license": "MIT",
  "description": "adds ability to sync secrets with 1password to the DMNO config engine",
  "keywords": [
    "dmno",
    "1password",
    "1pass",
    "env vars",
    "environment variables",
    "secrets",
    "dmno plugin"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dmno-dev/core.git",
    "directory": "packages/plugins/1password-plugin"
  },
  "bugs": {
    "url": "https://github.com/dmno-dev/core/issues"
  },
  "homepage": "https://dmno.dev",
  "exports": {
    ".": {
      "default": "./dist/index.mjs"
    }
  },
  "typesVersions": {
    "*": {
      "index": [
        "./dist/index.d.mts"
      ]
    }
  },
  "files": [
    "/dist",
    "/scripts"
  ],
  "scripts": {
    "build": "tsup",
    "build:ifnodist": "[ -d \"./dist\" ] && echo 'dist exists' || pnpm build",
    "dev": "pnpm run build --watch",
    "lint": "eslint src --ext .ts,.cjs",
    "lint:fix": "pnpm run lint --fix",
    "postinstall": "node scripts/install-cli.mjs"
  },
  "devDependencies": {
    "@dmno/eslint-config": "workspace:*",
    "@dmno/tsconfig": "workspace:*",
    "@types/async": "^3.2.24",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.11.30",
    "@types/unzip-stream": "^0.3.4",
    "tsup": "^8.0.2",
    "typescript": "^5.4.2"
  },
  "dependencies": {
    "@dmno/core": "workspace:*",
    "async": "^3.2.5",
    "dotenv": "^16.4.5",
    "lodash-es": "^4.17.21",
    "unzip-stream": "^0.3.1"
  }
}