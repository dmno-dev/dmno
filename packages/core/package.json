{
  "name": "@dmno/core",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "tsup",
    "build:ifnodist": "[ -d \"./dist\" ] && echo 'dist exists' || pnpm build",
    "dev": "pnpm run build --watch",
    "test": "vite-node ./src/test.ts",
    "lint": "eslint src --ext .ts,.cjs",
    "lint:fix": "pnpm run lint --fix"
  },
  "engines": {
    "node": ">=16"
  },
  "exports": {
    ".": {
      "default": "./dist/index.mjs"
    },
    "./cli-lib": {
      "default": "./dist/cli/plugin-cli-lib.mjs"
    }
  },
  "typesVersions": {
    "*": {
      "index": [
        "./dist/index.d.mts"
      ],
      "cli-lib": [
        "./dist/cli/plugin-cli-lib.d.mts"
      ]
    }
  },
  "bin": {
    "dmno": "./dist/cli/commander-cli.mjs"
  },
  "keywords": [],
  "author": "",
  "devDependencies": {
    "@dmno/eslint-config": "workspace:*",
    "@dmno/tsconfig": "workspace:*",
    "@types/async": "^3.2.24",
    "@types/debug": "^4.1.12",
    "@types/lodash-es": "^4.17.12",
    "@types/node": "^20.11.28",
    "@types/node-ipc": "^9.2.3",
    "@types/validate-npm-package-name": "^4.0.2",
    "@types/which": "^3.0.3",
    "tsup": "^8.0.2"
  },
  "dependencies": {
    "@dagrejs/graphlib": "^2.2.1",
    "@dmno/encryption-lib": "workspace:*",
    "@dmno/ts-lib": "workspace:*",
    "@inquirer/prompts": "^4.3.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "async": "^3.2.5",
    "base64-arraybuffer": "^1.0.2",
    "caller-path": "^4.0.0",
    "cli-table3": "^0.6.3",
    "commander": "^12.0.0",
    "debug": "^4.3.4",
    "dotenv": "^16.4.5",
    "execa": "^8.0.1",
    "jsonc-parser": "^3.2.1",
    "kleur": "^4.1.5",
    "lodash-es": "^4.17.21",
    "node-ipc": "npm:@achrinza/node-ipc@^10.1.10",
    "svgo": "^3.2.0",
    "typescript": "^5.4.2",
    "validate-npm-package-name": "^5.0.0",
    "vite": "^5.1.6",
    "vite-node": "^1.4.0",
    "which": "^4.0.0"
  }
}