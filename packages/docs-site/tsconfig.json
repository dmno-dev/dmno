{
  "extends": "astro/tsconfigs/strict",
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.d.ts",
    "src/**/*.mdx",
    "src/**/*.astro",

    "astro.config.ts",

    "./.dmno/.typegen/global.d.ts",
    "./.dmno/.typegen/global-public.d.ts",
    "./.dmno/.typegen/node.d.ts"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/components/*": [
        "src/components/*"
      ],
      "@/utils/*": [
        "src/utils/*"
      ]
    }
  }
}
