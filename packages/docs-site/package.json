{
  "name": "@dmno/docs-site",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && astro build",
    "netlify-build": "pnpm run docgen && pnpm run clidocgen && turbo build",
    "preview": "astro preview",
    "astro": "astro",
    "docgen": "typedoc --options ./src/utils/typedoc/typedoc.json",
    "clidocgen": "dmno get-cli-schema > ./src/utils/cli.json",
    "tapes": "node ./src/utils/tapes.js",
    "be-kind-rewind": "rm -rf ./src/assets/tapes/*",
    "lint": "eslint src --ext .ts,.cjs,.astro,.md,.mdx",
    "lint:fix": "pnpm run lint --fix"
  },
  "dependencies": {
    "@astrojs/check": "^0.5.10",
    "@astrojs/partytown": "^2.1.0",
    "@astrojs/sitemap": "^3.1.4",
    "@astrojs/starlight": "^0.22.1",
    "@astrojs/vue": "^4.1.0",
    "@dmno/astro-integration": "link:../integrations/astro",
    "@dmno/eslint-config": "workspace:*",
    "@dmno/tsconfig": "workspace:*",
    "@dmno/ui-lib": "workspace: *",
    "@iconify/vue": "^4.1.2",
    "astro": "^4.7.0",
    "astro-expressive-code": "^0.35.2",
    "astro-google-fonts-optimizer": "^0.2.2",
    "astro-iconify": "^1.2.0",
    "astro-robots-txt": "^1.0.0",
    "astro-sitemap": "^1.0.0",
    "dmno": "link:../core",
    "eslint-plugin-astro": "^0.31.4",
    "eslint-plugin-mdx": "^3.1.5",
    "less": "^4.2.0",
    "nanostores": "^0.10.3",
    "sharp": "^0.32.5",
    "starlight-blog": "^0.5.0",
    "starlight-links-validator": "^0.6.0",
    "typescript": "^5.4.5",
    "unplugin-icons": "^0.19.0",
    "vue": "^3.3.4"
  },
  "devDependencies": {
    "@iconify/json": "^2.2.206",
    "netlify-cli": "^17.1.0",
    "typedoc": "^0.25.12"
  }
}
