---
import { Icon } from "astro-iconify";
import { DmnoTileLogo } from "@dmno/ui-lib";
import SignUp from "../components/mailerlite/SignUp.astro";
import GA from "@/components/GA.astro";
import "../style/global.css";
---

<html lang="en">
  <head>
    <GA />
    <title>DMNO</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="icon" type="image/x-icon" href="/favicon.svg" />

    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Fira+Code:wght@300..700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="main-container">
      <DmnoTileLogo client:load autoPlay />
      <div class="homepage-card">
        <p>
          <b
            >DMNO will simplify how you configure, run, and deploy your
            applications.</b
          >
        </p>
        <p>
          We've got some absolutely mind-blowing tools in the works. So, please
          subscribe below and we'll keep you in the loop as we launch!
        </p>

        <SignUp />

        <p><Icon name="mdi:heart" /> Theo + Phil</p>

        <p class="homepage-ps">
          PS - please take our short <a
            href="https://forms.gle/PqasaFVcZrPXrg5z6"
            target="_blank">developer survey</a
          >!
        </p>
      </div>
    </div>
    <style>
      /* style.css */
      :root {
        font-family: Inter, system-ui, Avenir, Helvetica, Arial, sans-serif;
        line-height: 1.5;
        font-weight: 400;

        color-scheme: light dark;
        color: rgba(255, 255, 255, 0.87);
        background-color: #555;

        /* background: linear-gradient(0deg, rgba(5,1,78,1) 0%, rgba(42,9,121,1) 35%, rgba(130,0,255,1) 100%); */

        font-synthesis: none;
        text-rendering: optimizeLegibility;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
        -webkit-text-size-adjust: 100%;
      }

      a {
        font-weight: 500;
        color: #646cff;
        text-decoration: inherit;
      }
      a:hover {
        color: #535bf2;
      }

      body {
        margin: 0;
        display: flex;
        place-items: center;
        justify-content: center;
        min-width: 320px;
        min-height: 100vh;

        font-family: "Fira Code", monospace;
        font-optical-sizing: auto;
        font-weight: 400;
        font-style: normal;
      }
      .main-container {
        padding: 1.5rem;
        position: relative;
      }
      .homepage-card {
        background: #000;
        max-width: 500px;
        padding: 2rem;
      }
      .homepage-card p {
      }
      .homepage-card p a {
        color: #0fd236;
      }
      .homepage-card p a:hover {
        color: #0dfc05;
      }
      .homepage-card p svg[astro-icon] {
        color: red;
        height: 1.4em;
        vertical-align: middle;
      }
      .homepage-ps {
        font-size: 0.8em;
      }

      h1 {
        font-size: 3.2em;
        line-height: 1.1;
      }

      button {
        border-radius: 8px;
        border: 1px solid transparent;
        padding: 0.6em 1.2em;
        font-size: 1em;
        font-weight: 500;
        font-family: inherit;
        background-color: #1a1a1a;
        cursor: pointer;
        transition: border-color 0.25s;
      }
      button:hover {
        border-color: #646cff;
      }
      button:focus,
      button:focus-visible {
        outline: 4px auto -webkit-focus-ring-color;
      }

      .card {
        padding: 2em;
      }

      #app {
        max-width: 1280px;
        margin: 0 auto;
        padding: 2rem;
        text-align: center;
      }
      /* app.vue styles */

      :global(.dmno-tile-logo) {
        width: 250px;
        position: relative;
        transform: rotate(-5deg);
        transition: all 0.5s;
        margin: 0 auto;
        margin-bottom: 30px;
        &:hover {
          transform: rotate(0deg);
        }
      }
    </style>
  </body>
</html>
