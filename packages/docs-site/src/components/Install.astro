---
import { Tabs, TabItem, Code } from "@astrojs/starlight/components";

const { packageName } = Astro.props;
---

<Tabs>
  <TabItem label="npm">
    <Code lang="bash" code=`npm i ${packageName}` />
  </TabItem>
  <TabItem label="pnpm">
    <Code lang="bash" code=`pnpm add ${packageName}` />
  </TabItem>
  <TabItem label="Yarn">
    <Code lang="bash" code=`yarn add ${packageName}` />
  </TabItem>
</Tabs>
