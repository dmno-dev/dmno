---
const { muxId } = Astro.props;
---

<div class="video-block">
  <mux-player
    playback-id={muxId}
    autoplay
    loop
    muted
  />
</div>
<script src="https://cdn.jsdelivr.net/npm/@mux/mux-player"></script>


<style>
  .video-block {
    padding: 0;
    mux-player {
      margin: 0;
      padding: 0;
      --mute-button: none;
      display: block;
      border: none;
      margin: 0 auto;
      aspect-ratio: 16/10;
      --mute-button: none;

    }

    /* margin: 0 auto; */
    /* display: flex; */
    /* justify-content: center; */
  }
</style>
