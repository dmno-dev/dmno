---
import type { Props } from "@astrojs/starlight/props";

import EditLink from "@astrojs/starlight/components/EditLink.astro";
import LastUpdated from "@astrojs/starlight/components/LastUpdated.astro";
import Pagination from "@astrojs/starlight/components/Pagination.astro";

import EmailSignup from "./EmailSignup.vue";
---

<footer>
  <div class="meta sl-flex">
    <EditLink {...Astro.props} />
    <LastUpdated {...Astro.props} />
  </div>
  <Pagination {...Astro.props} />
  <EmailSignup client:load />
  <div class="footer-links">
    <span>Â© 2024 DMNO Inc.</span>
    <a href="/docs/footer/about/">About</a>
    <a href="/docs/footer/legal/">Legal</a>
  </div>
  {
    DMNO_PUBLIC_CONFIG.SCARF_PIXEL_ID && (
      <img
        referrerpolicy="no-referrer-when-downgrade"
        src={`https://scarf.dmno.dev/a.png?x-pxid=${DMNO_PUBLIC_CONFIG.SCARF_PIXEL_ID}`}
      />
    )
  }
</footer>

<style>
  .meta {
    gap: 0.75rem 3rem;
    justify-content: space-between;
    flex-wrap: wrap;
    margin-block: 3rem 1.5rem;
    font-size: var(--sl-text-sm);
    color: var(--sl-color-gray-3);
  }
  .footer-links {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-block: 1.5rem;
    font-size: var(--sl-text-sm);
    color: var(--sl-color-gray-3);
  }
  .meta > :global(p:only-child) {
    margin-inline-start: auto;
  }
</style>
