---
// import { PAGE_TITLE_ID } from  "@astrojs/starlight/constants";
import type { Props } from "@astrojs/starlight/props";

// not acutally exported...?
const PAGE_TITLE_ID = '_top';

const { npmPackage, title, customHeaderContent } = Astro.locals.starlightRoute.entry.data;

---

<div>
  <h1 id={PAGE_TITLE_ID}>
    {title}
  </h1>
  <div class="page-title-badges">
    {npmPackage && 
      <a href=`https://www.npmjs.com/package/${npmPackage}`>
        <img src=`https://img.shields.io/npm/v/${npmPackage}?label=${encodeURIComponent(npmPackage)}&color=9B55F5&logo=npm` />
      </a>
    }
    {customHeaderContent && <Fragment set:html={customHeaderContent} /> }
  </div>
  
</div>

<style>
	h1 {
		margin-top: 1rem;
		font-size: var(--sl-text-h1);
		line-height: var(--sl-line-height-headings);
		font-weight: 600;
		color: var(--sl-color-white);
	}
  .page-title-badges {
    margin-top: 8px;
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
    > p {
      display: block;
      margin: 0 !important;
      padding: 0;
    }
    &:empty {
      display: none;
    }
  }
</style>
