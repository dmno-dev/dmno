---
interface Props {
  title: string,
  imagePath: string,
  imageAlt: string,
  description?: string
}
const { title, imagePath, imageAlt, description } = Astro.props as Props;
---

<h2>{title}</h2>
<img src={imagePath} alt={imageAlt}>
<p class="description">{description}</p>

<style>
  h2 {
    margin: 3rem;
  }
  img {
    max-width: 90%;
    margin: 0 auto;
  }
</style>
