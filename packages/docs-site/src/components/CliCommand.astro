---
import type { ImageMetadata } from "astro";
import { Image } from "astro:assets";
import { Code } from "@astrojs/starlight/components";
import json from "@/utils/cli.json";

export const images = import.meta.glob<{ default: ImageMetadata }>(
  "../assets/tapes/*.gif",
);

export const formatExamples = (examples) => {
  let str = "";
  examples?.map((example) => {
    str += `# ${example.description}
${example.command} \n\n`;
  });
  return str;
};

export const formatPath = (command) => {
  return `../assets/tapes/${command}.gif`;
};

export const getCommand = (name) => {
  const commands = json;
  return commands?.find((c) => c.command === name);
};

const { name } = Astro.props;

const command = getCommand(name);

---

<div>
  <p>
    <i>{command.description}</i>
  </p>
  {command.more?.options.length ? <h4>Options</h4> : null}
  {command.more?.options?.map((option) => {
    return (
      <div>
        <Code code={option.flags} />
        <p>
          <em>{option.description}</em>
        </p>
      </div>
    );
  })}
  {command.examples.length ? (
    <div>
      <h4>Example(s)</h4>
      <Code code={formatExamples(command.examples)} lang="bash" />
    </div>
  ) : null}
  { images[formatPath(command.command)] ? (
  <Image
    src={images[formatPath(command.command)]()}
    alt=`a CLI showing the dmno ${command.command} command`
  />) : null }
</div>
