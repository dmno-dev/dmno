---

interface Props{
  heading?: string;
  subheading?: string;
  image?: string;
}

const { heading, subheading } = Astro.props as Props;
---

<div class="hero">
  <h1><slot name="heading">{heading}</slot></h1>
  <h2><slot name="subheading">{subheading}</slot></h2>
</div>

<style>
  .hero {
    color: var(--color-text-full-shade);
    padding-bottom: 2rem;
    padding: 3rem  2rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    @container (max-width: 800px) { 
      padding: 2rem 0rem;
    }
    
    .hero__logo {
      display: flex;
      position: relative;
      align-items: center;
      
      :global(.dmno-tile-logo) {
        max-width: 50vw;
        
      }
    }
    .hero__text {
      justify-content: center;
    }

    &:before {
      content: '';
      position: absolute;
      z-index: -1;
      top: 0;
      bottom: 50%;
      left: 0%;
      right: 0;
      opacity: .2; 
    }
  }
  h1 {
    font-size: 1.6rem;
    line-height: 1.3em;
    @media (min-width: 50rem) {
      font-size: 4rem;
      display: block;
      line-height: 1em;
    }
    
  }
  h2 {
    font-size: 1.2rem;
    line-height: 1.4em;
    font-weight: 500;
    @media (min-width: 50rem) {
      font-size: 1.5rem;
    }
    
  }
</style>
