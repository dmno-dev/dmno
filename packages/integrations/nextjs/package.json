{
  "name": "@dmno/nextjs-integration",
  "version": "1.0.0",
  "license": "MIT",
  "description": "tools for integrating dmno into nextjs",
  "keywords": [
    "dmno",
    "nextjs",
    "next",
    "next.js",
    "plugin",
    "env vars",
    "environment variables",
    "secrets"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dmno-dev/core.git",
    "directory": "packages/integrations/nextjs"
  },
  "bugs": {
    "url": "https://github.com/dmno-dev/core/issues"
  },
  "homepage": "https://dmno.dev",
  "exports": {
    ".": {
      "default": "./dist/index.mjs"
    }
  },
  "typesVersions": {
    "*": {
      "index": [
        "./dist/index.d.mts"
      ]
    }
  },
  "files": [
    "/dist"
  ],
  "scripts": {
    "build": "tsup",
    "build:ifnodist": "[ -d \"./dist\" ] && echo 'dist exists' || pnpm build",
    "dev": "pnpm run build --watch",
    "lint": "eslint src --ext .ts,.cjs",
    "lint:fix": "pnpm run lint --fix"
  },
  "devDependencies": {
    "@dmno/eslint-config": "workspace:*",
    "@dmno/tsconfig": "workspace:*",
    "@types/node": "^20.12.7",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5"
  },
  "peerDependencies": {
    "@dmno/core": "workspace:*",
    "next": "^14"
  }
}
