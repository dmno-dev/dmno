{
  "compilerOptions": {
    "target": "ES6",
    "declaration": true,
    "declarationMap": true,
    "useDefineForClassFields": true,
    "module": "ES6",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": [
      "ES6",
      "DOM",
      "dom.iterable"
    ],
    "skipLibCheck": true,
    "customConditions": [ "ts-src" ]
  },
  "references": [
    { "path": "./tsconfig.node.json" }
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ]
}
