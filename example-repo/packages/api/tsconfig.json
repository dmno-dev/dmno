{
  "ts-node": {
    "swc": true,
  },
  "compilerOptions": {
    "module": "ESNext",
    "target": "ESNext",
    "lib": [
      "ESNext"
    ],
    "strict": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "rootDir": "./",
  },
  "include": [
    "src/**/*.ts",

    // inject DMNO_CONFIG globals
    ".dmno/.typegen/global.d.ts",
    ".dmno/.typegen/global-public.d.ts",
  ]
}
